programa {
  funcao inicio() {
    
    inteiro num1, num2, num3
    real media

    escreva("Calculando a média \n")

    escreva("Digite o 1º número: ")
    leia(num1)

    escreva("Digite o 2º número: ")
    leia(num2)

    escreva("Digite o 3º número: ")
    leia(num3)

    media = (num1 + num2 + num3) / 3 

    escreva("A média aritmética é: ", media)


  }
}
